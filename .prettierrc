{
  "endOfLine": "auto",
  "trailingComma": "none",
  "singleQuote": true,
  "printWidth": 80,
  "tabWidth": 2,
  "semi": false,
  "bracketSpacing": true,
  "arrowParens": "avoid",
  "singleAttributePerLine": true,
  "bracketSameLine": false,
  "plugins": ["prettier-plugin-tailwindcss", "@trivago/prettier-plugin-sort-imports"],
  "pluginSearchDirs": [
    "./node_modules"
  ],
  "importOrder": [
    "^react(.*)$",
    "^next(.*)$",
    "^@/(.*)$",
    "^[./]",
    "^[../]"
  ],
  "importOrderSeparation": false
}
